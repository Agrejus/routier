{
    "compilerOptions": {
        "baseUrl": ".",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "module": "ESNext",
        "lib": [
            "ESNext"
        ],
        "target": "ESNext",
        "declaration": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "paths": {
            "@core/*": [
                "./src/*"
            ],
            "@core/utilities": [
                "./src/utilities"
            ],
            "@core/results": [
                "./src/results"
            ],
            "@core/schema": [
                "./src/schema"
            ],
            "@core/pipeline": [
                "./src/pipeline"
            ],
            "@core/collections": [
                "./src/collections"
            ],
            "@core/plugins": [
                "./src/plugins"
            ],
            "@core/expressions": [
                "./src/expressions"
            ],
            "@core/errors": [
                "./src/errors"
            ],
            "@core/performance": [
                "./src/performance"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "./src/__tests__/*"
    ]
}