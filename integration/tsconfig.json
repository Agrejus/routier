{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "module": "ESNext",
        "lib": [
            "ESNext",
            "ESNext.disposable"
        ],
        "target": "ESNext",
        "declaration": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "dist",
        "resolveJsonModule": true,
        "types": [
            "node",
            "vitest/globals"
        ]
    },
    "include": [
        "./src/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "./src/__tests__/*"
    ]
}