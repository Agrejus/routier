{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2020",
        "lib": [
            "ES2020",
            "ES2023",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "downlevelIteration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "resolveJsonModule": true,
        "declaration": true,
        "noEmit": true
    },
    "include": [
        "core/src/**/*",
        "datastore/src/**/*",
        "react/src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/__tests__/**",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}